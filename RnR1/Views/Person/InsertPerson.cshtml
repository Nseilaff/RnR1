@model Person

<h2 class="text-white">Create a New Reservation</h2>

@using (Html.BeginForm("InsertPersonToDatabase", "person", "Post"))
{
    <input asp-for="PersonID" type="hidden" value="" />

    <label asp-for="FName" class="control-label text-white">First Name</label>
    <input type="text" name="FName" class="form-control" value="" />

    <label asp-for="LName" class="control-label text-white">Last Name</label>
    <input type="text" name="LName" class="form-control" />

    <label asp-for="PhoneNum" class="control-label text-white">PhoneNum</label>
    <input type="number" name="PhoneNum" class="form-control" />

    <label asp-for="Email" class="control-label text-white">Email</label>
    <input type="text" name="Email" class="form-control" />

    <div class="form-group text-white">
        <label for="">Reservation Date</label>
        <select class="form-control" name="ReserveDate" value="">
            @foreach (var date in Model.Date)
            {
                <option value="@date">@date</option>
            }
        </select>
    </div>

    @*<label asp-for="Date" class="control-label">Reserve Date</label>
    <input type="text" name="ReserveDate" class="form-control" />*@


    <div class="form-group text-white">
        <label for="">Reservation Time</label>
        <select class="form-control" name="Time" value="">
            @foreach(var time in Model.TimeSlots)
            {
                <option value="@time">@time</option>
            }
        </select>
    </div>
    <label asp-for="NumOfPeople" class="control-label text-white">Number in your group</label>
    <input type="text" name="NumOfPeople" class="form-control" />

    <input type="submit" value="Create Person" class="btn btn-primary" />

}